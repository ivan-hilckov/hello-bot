# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DB_PASSWORD=secure_production_password
DB_PORT=5432

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Docker Image (for production deployment)
# BOT_IMAGE=your-dockerhub-username/hello-bot:latest

# Database Performance
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Development Tools (for docker-compose profiles)
ADMINER_PORT=8080

# Production Webhook (optional)
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET_TOKEN=your_webhook_secret

# Redis Cache Settings
REDIS_PORT=6379
REDIS_ENABLED=true

# Security Settings
RATE_LIMIT=100/minute
ALLOWED_HOSTS=*
